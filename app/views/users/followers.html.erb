<div class="row">
   <aside class="col-md-4">
        <%= render 'shared/user_info' %>
   </aside>
    <h1 class="h4"><%= @user.name %>さんををフォローしている人</h1>
    <div class="col-md-8">
        <% @user.follower_relationships.each do |f| %>
            <% @followeruser = User.find(f.follower_id) %>
            <div class="panel panel-default">
                <div class="panel-body">
                    <% if @followeruser.profileimage? %>
                        <%= link_to (image_tag @followeruser.profileimage, size: '50x50'), user_path(@followeruser.id) %>
                    <% else %>
                        <%= link_to gravatar_for(@followeruser, size: 50), user_path(@followeruser.id) %>
                    <% end %>
                    <div class="fwl-username text-center">
                        <%= link_to @followeruser.name, user_path(@followeruser.id) %>
                    </div>
                </div>
                <ul class="list-group">
                    <li class="list-group-item">住まい：<%= @followeruser.area %></li>
                    <li class="list-group-item">プロフィール：<%= @followeruser.profile %></li>
                </ul>
            </div>
        <% end %>
    </div>
</div>
