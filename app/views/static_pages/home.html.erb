<% if logged_in? %>
    <div class="row">
        <aside class="col-md-4">
            <section class="user_info">
                <%= render 'shared/user_info' %>
            </section>
            <section>
                <table class="table" border="0">
                    <tr>
                        <td>
                            <div class="text-center">ツイート<br /><%= current_user.microposts.count %></div>
                        </td>
                        <td>
                            <div class="text-center"><%= link_to "フォロー", followings_user_path(current_user) %><br />
                            <%= current_user.following_relationships.length %></div>
                        </td>
                        <td>
                            <div class="text-center"><%= link_to "フォロワー", followers_user_path(current_user) %><br />
                            <%= current_user.follower_relationships.length %></div>
                        </td>
                        <td>
                            <div class="text-center"><%= link_to "お気に入り", favorite_user_path(current_user) %><br />
                            <%= current_user.favoing_relationfavotweets.count %></div>
                        </td>
                    </tr>
                </table>
            </section>
            <section class="micropost_form">
                <%= render 'shared/micropost_form' %>
            </section>
        </aside>
        <div class="col-md-8">
            <h3>つぶやきのFeed</h3>
            <%= render 'shared/feed' %>
        </div>
        <div class='after'></div><!-- clear: both -->
        <%# kaminariによるページネーション表示 %>
        <div id="pagination">
            <%= paginate @feed_items %>
        </div>
    </div>
<% else %>
    <div class="center jumbotron">
        <h1>Welcome to the Microposts</h1>
        
        <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    </div>
<% end %>


