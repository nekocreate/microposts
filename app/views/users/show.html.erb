<div class="row">
　　<h1 class="h3"><%= @user.name %>さんのページです。</h1>
   <aside class="col-md-4">
       <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <div>住まい：<%= @user.area %></div>
            <div>プロフィール：<%= @user.profile %></div>
            <%#= @user.inspect %><%# 確認のためこのコードはもう暫く残しておきたい。 %>
       </section>
        <section>
            <table class="table" border="0">
                <tr>
                    <td>
                        <div class="text-center">ツイート<br /><%= @microposts.count %></div>
                    </td>
                    <td>
                        <div class="text-center"><%= link_to "フォロー", followings_user_path(@user.id) %><br />
                        <%= @user.following_relationships.length %></div>
                    </td>
                    <td>
                        <div class="text-center"><%= link_to "フォロワー", followers_user_path(@user.id) %><br />
                        <%= @user.follower_relationships.length %></div>
                    </td>
                    <td>
                        <div class="text-center"><%= link_to "お気に入り", favorite_user_path(@user.id) %><br />
                        <%= @user.favoing_relationfavotweets.length %></div>
                    </td>
                </tr>
            </table>
        </section>
   </aside>
   <div class="col-md-8">
       <%= render 'follow_form' if logged_in? %><%# ログインしている場合は部分テンプレートfollow_formをrender %>
       <% if @user.microposts.any? %>
           <h3>つぶやきの数 (<%= @user.microposts.count %>)</h3>
           <%#= @microposts.inspect %><%# 確認のためこのコードはもう暫く残しておきたい。 %>
           <ol class="microposts">
               <%# @micropostsのハッシュオブジェクト(@micropostsに紐付けられているcontentとuser_idなどの値)が
               パーシャルテンプレート_micropost.html.erbに渡されrenderされる。
               このとき、eachメソッドと同様の処理が行われるので、投稿順に繰り返される。
               パーシャル_micropost.html.erbの内容を自動で繰り返してくれるので超便利！%>
               
               <%= render @microposts %>
               <%# このshow.html以外のテンプレートで使う場合は、@user.micropostsとしなければエラーになった %>

                <%# 上記は下記と同じ処理を行っている %>
                <%# @microposts.each do |micropost| %>
                <%#= render partial: 'microposts/micropost', locals: { micropost: micropost } %>
                <%# end %>
           </ol>
        <% end %>
   </div>
</div>


